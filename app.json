{
  "expo": {
    "name": "billsApp",
    "slug": "billsApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/big_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#202024"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to use Face ID."
      },
      "bundleIdentifier": "com.gbolsoni.billsApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/big_logo.png",
        "backgroundColor": "#202024"
      },
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.gbolsoni.billsApp"
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "15a0e982-f275-4fb1-b0d2-54c83b48188d"
      }
    }
  }
}
